{
  "name": "pkoa",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "serve": "export NODE_ENV=development && nodemon --exec ts-node src/app.ts",
    "start": "tsc && node dist/app.js",
    "prd": "tsc && export NODE_ENV=production && pm2 start pm2.config.json",
    "build": "tsc",
    "testVerbose": "export NODE_ENV=uniTest && jest --runInBand --forceExit --colors --detectOpenHandles --coverage --verbose",
    "test": "export NODE_ENV=uniTest && jest --runInBand --forceExit --colors --detectOpenHandles --silent",
    "testLog": "export NODE_ENV=uniTest && jest --runInBand --forceExit --colors --detectOpenHandles",
    "watch-test": "npm run test -- --watchAll",
    "tmp": "export NODE_ENV=development && ts-node src/tmp.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "class-transformer": "^0.3.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.12.2",
    "flakeid": "^1.0.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-jwt": "^4.0.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.4.0",
    "mysql2": "^2.2.5",
    "nodejs-snowflake": "^1.5.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "snowflake-promise": "^4.2.0",
    "ts-md5": "^1.2.7",
    "typeorm": "^0.2.26"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.11.1",
    "@types/redis": "^2.8.28",
    "@types/supertest": "^2.0.10",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
